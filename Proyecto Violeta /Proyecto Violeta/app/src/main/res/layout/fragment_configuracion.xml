<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/magenta"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imagenUsuarioConfig"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Imagen del usuario"
            android:src="@drawable/ic_launcher_foreground" />

        <Button
            android:id="@+id/btnCambiarFoto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:backgroundTint="#C454DD"
            android:text="Cambiar foto" />


        <EditText
            android:id="@+id/etNombreCompletoConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:hint="Nombre completo"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etTelefonoConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono personal"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etDomicilioConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Domicilio"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etContacto1NombreConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre contacto 1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etContacto1TelefonoConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono contacto 1"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etContacto1RelacionConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Relación contacto 1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etContacto2NombreConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre contacto 2"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etContacto2TelefonoConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono contacto 2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/etContacto2RelacionConfig"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Relación contacto 2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnGuardarCambios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#C454DD"
            android:text="Guardar cambios" />

    </LinearLayout>
</ScrollView>
