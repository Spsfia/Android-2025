<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/magenta"
    android:fillViewport="true"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFotoPerfil"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginBottom="16dp"
            android:background="@android:color/darker_gray"
            android:contentDescription="Foto de perfil"
            android:scaleType="centerCrop" />

        <EditText
            android:id="@+id/edtNombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre completo"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtDomicilio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Domicilio"
            android:textSize="20sp" />

        <!-- Contacto de emergencia 1 -->
        <EditText
            android:id="@+id/edtContacto1Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Contacto 1"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtContacto1Telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono Contacto 1"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtContacto1Relacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Relación Contacto 1"
            android:textSize="20sp" />

        <!-- Contacto de emergencia 2 -->
        <EditText
            android:id="@+id/edtContacto2Nombre"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Nombre Contacto 2"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtContacto2Telefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Teléfono Contacto 2"
            android:inputType="phone"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/edtContacto2Relacion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Relación Contacto 2"
            android:textSize="20sp" />

        <Button
            android:id="@+id/btnGuardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:backgroundTint="#C454DD"
            android:padding="12dp"
            android:text="Guardar" />

    </LinearLayout>
</ScrollView>
